<%= render "shared/header.header" %>
<div class="item-form">
    <div class="item-form-box">
     <%= bootstrap_form_with model: item, local: true do |f| %>
        <%= render '/shared/error_messages', model: f.object %>
        <%= f.text_field :name, placeholder: "title", rows: "10" %>
        <%= f.text_area :text, placeholder: "text", rows: "6" %>
        <%= f.file_field :image, id:"item-image" %>
        <%= f.collection_select(:days_to_ship_id, DaysToShip.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        <%= f.text_field :price, placeholder: "price", rows: "10" %>
        <%= f.submit "出品する" ,class:"btn btn-primary btn-lg" %>
      <button type="button" class="btn btn-warning"><%= link_to 'もどる', items_path, class:"btn" %></button>
      <% end %>
    </div>
</div>
<%= render "shared/footer" %>
