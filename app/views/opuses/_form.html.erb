<%= form_with(model: @opus, local: true) do |form| %>
  <%= render 'layouts/error_messages', model: form.object %>
  <%# <%= form.text_field :image, placeholder: "Image Url" %> 
  <%= form.text_area :title, placeholder: "title", rows: "10" %>
  <%= form.text_area :description, placeholder: "作品への思い", rows: "10" %>
  <%= form.submit "SEND" %>
<% end %>