<%= render "shared/header.header" %>
<div class="order-index">
  <div class="order-boxs">
    <div class="box-item">
      <div class="order-title">
        <h1>購入内容</h1>
      </div>
      <div class="order-image">
        <%= image_tag @item.image, size: "500x260" %>
      </div>
      <div class="order-name">
        <%= @item.name %>
      </div>
      <div class="order-price">
        <p>¥<%= @item.price %></p>
      </div>
    </div>
    <div class="box-info">
      <%= bootstrap_form_with model:@order, id: 'charge-form', class: 'card-form', url:item_orders_path, local: true do |f| %>
      <%= render '/shared/error_messages', model: f.object %>
        <div class="order-card">
        <h2>クレジットカード情報入力</h2>
          <%= f.text_field 'card-number', class:"input-default", id:"card-number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
          
           <%= f.text_field 'card-exp-month', class:"input-expiration-date", id:"card-exp-month", placeholder:"例)3" %>
            
            <%= f.text_field 'card-exp-year', class:"input-expiration-date", id:"card-exp-year", placeholder:"例)23" %>
            
          <%= f.text_field "card-cvc",class:"input-default", id:"card-cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4" %> 
        </div>

        <div class="order-address">
        <h2>配送先情報</h2>
           <%= f.text_field :postal_code, class:"input-default", id:"postal-code", placeholder:"例）123-4567", maxlength:"8" %>
           <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}) %>
           <%= f.text_field :municipality, class:"input-default", id:"city", placeholder:"例）横浜市緑区"%>
           <%= f.text_field :address, class:"input-default", id:"addresses", placeholder:"例）青山1-1-1"%>
           <%= f.text_field :building_name, class:"input-default", id:"building", placeholder:"例）柳ビル103"%>
           <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%>


        </div>
     
    </div>  
    <div class="box-judge">
    <%= f.submit "購入" ,class:"btn btn-danger btn-lg" %>
    <%# <%= link_to "購入", item_orders_path(@item.id), class:"btn btn-danger btn-lg" %> 
    <%= link_to "もどる", item_path(@item.id), class:"btn btn-warning btn-lg" %>
    </div>
     <% end %>
  </div>
</div>