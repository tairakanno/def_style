<div class="sign-in-filde">
  <div class="signimage">
    <script>
    $('.signimage').fadeIn(3000);
    </script>
      <div class="signimage-header">
        <p class="signimage-p">まだ出会ったことのない<br>可能性と出会おう</p>
      </div>
      <script>
        $('.signimage-p').show(9000)
      </script>
      <div class="sign-in-boxs">
              <div class="sign-up-box">
            <h2>participate</h2>

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="field">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>

                <div class="field">
                  <%= f.label :nickname %><br />
                  <%= f.text_field :nickname, autofocus: true %>
                </div>

                <div class="field">
                  <%= f.label :prefecture_id %><br />
                  <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}) %>
                </div>
                <div class="field">
                  <%= f.label :genre_id %><br />
                  <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}) %>
                </div>
                <div class="field">
                  <%= f.label :image %><br />
                  <%= f.file_field :image %>
                </div>
                <div class="field">
                  <%= f.label :password %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password" %>
                </div>

                <div class="field">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                </div>

                <div class="actions">
                  <p><%= f.submit "Sign up" %></p>
                </div>
              <% end %>

        <%= render "devise/shared/links" %>
        </div>
        <script>
          $('.sign-up-box').fadeIn(8000);
        </script>
      </div>
  
  </div>

</div>